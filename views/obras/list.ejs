<%- include('../header.ejs') %>

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Obras de Arte</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1>Obras de Arte</h1>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Año de Creación</th>
          <th>Tipo</th>
          <th>Imagen</th>
        </tr>
      </thead>
      <tbody>
        <% obras.forEach((obra) => { %>
          <tr>
            <td><%= obra.id %></td>
            <td><%= obra.nombre %></td>
            <td><%= obra.anioDeCreacion %></td>
            <td><%= obra.tipo %></td>
            <td><img src="/image/obras/<%= obra.imagen %>" alt="<%= obra.nombre %>" width="100" height="100"></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>

